<%- include("../partials/header.ejs") %>

<div class="container">
	<h1 style="text-align:center; margin-top: 55px; ">
		Edit Campground <i><%=campground.name%></i>
	</h1>
	<div class="row">
		<div style="width: 30%; margin:50px auto;">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" >
				<div class="form-group" >
					<input class="form-control" id="username" type="text" name="name" value="<%=campground.name%>">	
				</div>
				<div class="form-group">
					<input class="form-control" id="imageUrl" type="text" name="image" value="<%=campground.image%>">	
				</div>
				<div class="form-group">
					<input class="form-control" id="description" type="text" name="description" value="<%=campground.description%>">
				</div>
				<button class="btn btn-success form-group">
					SUBMIT
				</button>
			</form>
		</div>
		
	</div>
</div>

<%- include("../partials/footer.ejs") %>
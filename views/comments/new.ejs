	<h1 style="text-align:center; margin-top: 55px; ">
		Create a Comment for <%= campground.name %>
	</h1>
	<div class="row">
		<div style="width: 30%; margin:50px auto;">
			<form action="/campgrounds/<%=campground._id%>/comments" method="POST" >
				<div class="form-group">
					<input class="form-control" id="imageUrl" type="text" name="comment[text]" placeholder="Comment something">	
				</div>
				<button class="btn btn-success form-group">
					SUBMIT
				</button>
			</form>		
		</div>
		
	</div>
</div>


<div class="container">
	<h1 style="text-align:center; margin-top: 55px; ">
		Edit Comment
	</h1>
	<div class="row">
		<div style="width: 30%; margin:50px auto;">
			<form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT" method="POST" >
				<div class="form-group">
					<input class="form-control" id="description" type="text" name="comment[text]" value="<%=comment.text%>">
				</div>
				<button class="btn btn-success form-group">
					SUBMIT
				</button>
			</form>
		</div>
		
	</div>
</div>

